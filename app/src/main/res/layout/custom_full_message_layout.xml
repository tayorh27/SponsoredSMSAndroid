<?xml version="1.0" encoding="utf-8"?>
<CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_margin="10dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal" >

        <!-- ListRow Left sied Thumbnail image @drawable/list_selector -->


        <com.mma.mymessagingapp.RoundedImageView
            android:layout_marginTop="@dimen/fourdp"
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/sixty_four_dp"
            android:layout_height="@dimen/sixty_four_dp"
            android:background="@color/deepPurple500"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/fifty_sp"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:textStyle="bold"
            android:text="M"
            android:textColor="@color/white"
            android:id="@+id/textView2" />

        <!-- Title Of Song -->

        <TextView
            android:id="@+id/custom_favorite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="username"
            android:textColor="#616161"
            android:textSize="20sp"
            android:typeface="sans"
            android:paddingLeft="10dp"/>

        <!-- Artist Name -->

        <TextView
            android:id="@+id/custom_favorite_subtext"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_below="@id/custom_favorite_text"
            android:layout_marginTop="0dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Just gona stand there and ..."
            android:textColor="#757575"
            android:textSize="15sp"
            android:paddingTop="1dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/custom_favorite_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_favorite_text"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Just gona stand there and ..."
            android:textColor="#757575"
            android:textSize="15sp"
            android:paddingTop="23dp"
            android:paddingLeft="10dp"/>

        <!-- Rightend Duration #ff0acca1 -->


    </RelativeLayout>

</CardView>